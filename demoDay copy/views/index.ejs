    <title>Demo Day Project</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark py-3">
        <section class="container-fluid">
          <a class="navbar-brand" href="#">Clutch</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <section class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a href="/resources" class="nav-link">Must Have's</a>
              </li>
              <li class="nav-item">
                <a href="/maintenance" class="nav-link">How To's</a>
              </li>
              <li class="nav-item">
                <a href ="lights" class="nav-link">Why did a light on the dashboard appear?</a>
              </li>
              <li class="nav-item">
                <a href ="/login" class="nav-link" >Login</a>
              </li>
            </ul>
          </section>
        </section>
      </nav>
    
      <section class =" topSection bg-dark.text-light.p-5.text-center text-sm-start">
          <section class ="container">
              <section class="d-sm-flex align-items-center justify-content-between">
                  <section>
                      <h2>Educate Yourself</h2>
                      <p class ="lead my-4">There is a estimated 1.4 billion cars on the road, but many do not have knowledge of basic car maintence. Our community helps bridge that gap.</p>
                      <button class="btn btn-primary btn-lg">Sign Up</button>
                    </section>
                  <img class ="img-fluid w-50 d-none d-sm-block" src="MainPic.svg" alt="MainPic">
              </section>
          </section>

      </section>
      <h3>Topics</h3>
          <ul class="topics">
          <% for(var i=0; i<topics.length; i++) {%>
            <li class="topics">
              <p>Topic: <%= topics[i].topic %></p>
              <span><%= topics[i].when %></span>
              <span class="description"><%= topics[i].description %></span>


              <% const responses= topics[i].response
              for(var j=0; j<responses.length; j++) {%>
                <li class="responses">
                  <span><%= responses[j].when %></span>
                  <span><%= responses[j].description %></span>
                  <% } %>
                  <section class="big">
                  <section class="hidden">
              <form action="createResponse" method="POST">
                <input type="hidden" name="topicId" placeholder="Response" value="<%= topics[i]._id %>"></input>
                <!-- <input type="text" name="response" placeholder="Your Response">Response</input> -->
                <textarea name ="description"></textarea><br>
                <button type="submit">Post Response</button>
        
              </form>
            </section>
         

            </li>
          <% } %>
          </ul>


<section class="textArea">
        <h2>Create A New Topic</h2>
      <form action="createTopic" method="POST">

        <input id="topic" type="text" name="topic" placeholder="Topic Name"></input><br>
        <textarea name ="description"></textarea><br>
        <button type="submit">Create Topic</button>

      </form>
    </section>
  </section>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src ="main.js"></script>  
</body>
</html>